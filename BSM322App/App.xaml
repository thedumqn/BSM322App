<?xml version = "1.0" encoding = "UTF-8" ?>
<Application xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:BSM322App"
             x:Class="BSM322App.App">
    <Application.Resources>
        <ResourceDictionary>
            
            <Color x:Key="PageBackgroundColor">#FFFFFF</Color>
            <Color x:Key="PrimaryTextColor">#222222</Color>
            <Color x:Key="SecondaryTextColor">#666666</Color>
            <Color x:Key="CardBackgroundColor">#F4F4F4</Color>
            <Color x:Key="PrimaryColor">#007AFF</Color>
            
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Resources/Styles/Colors.xaml" />
                <ResourceDictionary Source="Resources/Styles/Styles.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>
</Application>
