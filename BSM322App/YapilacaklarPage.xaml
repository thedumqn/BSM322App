<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BSM322App.YapilacaklarPage"
             Title="Yapılacaklar"
             BackgroundColor="{AppThemeBinding Light=#F8F9FA, Dark=#121212}">

	<ScrollView>
		<StackLayout Padding="20" Spacing="15">

			<!-- Başlık Alanı -->
			<Frame BackgroundColor="{AppThemeBinding Light=White, Dark=#1E1E1E}"
                   CornerRadius="15"
                   HasShadow="True"
                   Padding="0">
				<StackLayout Padding="20" Spacing="10">
					<Label Text="📝 Yapılacaklar Listem"
                           FontSize="24"
                           FontAttributes="Bold"
                           TextColor="{AppThemeBinding Light=#2C3E50, Dark=#EAEAEA}"
                           HorizontalOptions="Center"/>
					<Label Text="Günlük görevlerinizi organize edin"
                           FontSize="14"
                           TextColor="{AppThemeBinding Light=#7F8C8D, Dark=#AAAAAA}"
                           HorizontalOptions="Center"/>
				</StackLayout>
			</Frame>

			<!-- Yeni Görev Ekleme Butonu -->
			<Frame BackgroundColor="#27AE60"
                   CornerRadius="25"
                   HasShadow="True"
                   Padding="0">
				<Button Text="➕ Yeni Görev Ekle"
                        BackgroundColor="Transparent"
                        TextColor="White"
                        FontSize="16"
                        FontAttributes="Bold"
                        Clicked="OnYeniGorevClicked"
                        HeightRequest="50"/>
			</Frame>

			<!-- Görevler Listesi -->
			<CollectionView x:Name="GorevlerCollectionView"
                            ItemsSource="{Binding Gorevler}"
                            BackgroundColor="Transparent">
				<CollectionView.ItemTemplate>
					<DataTemplate>
						<Grid Padding="5">
							<Frame BackgroundColor="{AppThemeBinding Light=White, Dark=#1E1E1E}"
                                   CornerRadius="15"
                                   HasShadow="True"
                                   Padding="0"
                                   Margin="0,5">
								<Grid Padding="15"
                                      RowDefinitions="Auto,Auto,Auto,Auto"
                                      ColumnDefinitions="Auto,*,Auto,Auto"
                                      RowSpacing="8">

									<!-- Tamamlandı CheckBox -->
									<Frame Grid.Row="0" Grid.Column="0"
                                           BackgroundColor="{AppThemeBinding Light=#ECF0F1, Dark=#2C2C2C}"
                                           CornerRadius="15"
                                           Padding="5"
                                           HasShadow="False">
										<CheckBox IsChecked="{Binding Tamamlandi}"
                                                  CheckedChanged="OnTamamlandiChanged"
                                                  Color="#27AE60"/>
									</Frame>

									<!-- Görev Başlığı -->
									<Label Grid.Row="0" Grid.Column="1"
                                           Text="{Binding Baslik}"
                                           FontSize="18"
                                           FontAttributes="Bold"
                                           TextColor="{AppThemeBinding Light=#2C3E50, Dark=#EAEAEA}"
                                           VerticalOptions="Center"
                                           Margin="15,0,10,0"/>

									<!-- Görev Detayı -->
									<Label Grid.Row="1" Grid.Column="1"
                                           Text="{Binding Detay}"
                                           FontSize="14"
                                           TextColor="{AppThemeBinding Light=#7F8C8D, Dark=#AAAAAA}"
                                           Margin="15,0,10,0"
                                           LineBreakMode="WordWrap"/>

									<!-- Tarih ve Saat -->
									<Frame Grid.Row="2" Grid.Column="1"
                                           BackgroundColor="#3498DB"
                                           CornerRadius="10"
                                           Padding="8,4"
                                           HasShadow="False"
                                           HorizontalOptions="Start"
                                           Margin="15,5,10,0">
										<Label Text="{Binding TarihSaat, StringFormat='🕐 {0:dd.MM.yyyy HH:mm}'}"
                                               FontSize="12"
                                               TextColor="White"
                                               FontAttributes="Bold"/>
									</Frame>

									<!-- Düzenle Butonu -->
									<Frame Grid.Row="0" Grid.Column="2"
                                           BackgroundColor="#F39C12"
                                           CornerRadius="20"
                                           Padding="0"
                                           HasShadow="False"
                                           VerticalOptions="Center">
										<Button Text="✏️ Düzenle"
                                                BackgroundColor="Transparent"
                                                TextColor="White"
                                                FontSize="12"
                                                FontAttributes="Bold"
                                                Clicked="OnDuzenleClicked"
                                                CommandParameter="{Binding}"
                                                Padding="12,8"/>
									</Frame>

									<!-- Sil Butonu -->
									<Frame Grid.Row="0" Grid.Column="3"
                                           BackgroundColor="#E74C3C"
                                           CornerRadius="20"
                                           Padding="0"
                                           HasShadow="False"
                                           VerticalOptions="Center"
                                           Margin="5,0,0,0">
										<Button Text="🗑️ Sil"
                                                BackgroundColor="Transparent"
                                                TextColor="White"
                                                FontSize="12"
                                                FontAttributes="Bold"
                                                Clicked="OnSilClicked"
                                                CommandParameter="{Binding}"
                                                Padding="12,8"/>
									</Frame>

									<!-- Ayırıcı -->
									<Frame Grid.Row="3" Grid.ColumnSpan="4"
                                           HeightRequest="2"
                                           BackgroundColor="{AppThemeBinding Light=#BDC3C7, Dark=#333333}"
                                           CornerRadius="1"
                                           HasShadow="False"
                                           Margin="0,10,0,0"/>
								</Grid>
							</Frame>
						</Grid>
					</DataTemplate>
				</CollectionView.ItemTemplate>
			</CollectionView>

			<!-- Alt Boşluk -->
			<BoxView HeightRequest="20" BackgroundColor="Transparent"/>

		</StackLayout>
	</ScrollView>
</ContentPage>
