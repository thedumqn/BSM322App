<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BSM322App.HaberlerPage1"
             Title="Haberler"
             BackgroundColor="{DynamicResource PageBackgroundColor}">

    <StackLayout Padding="10" Spacing="10">

        <!-- Kategori Seçimi -->
        <Picker x:Name="kategoriPicker"
                Title="Kategori Seçin"
                TitleColor="Gray"
                SelectedIndexChanged="KategoriPicker_SelectedIndexChanged"
                TextColor="{DynamicResource PrimaryTextColor}" />

        <!-- Yükleniyor göstergesi -->
        <ActivityIndicator x:Name="loadingIndicator"
                           IsVisible="False"
                           IsRunning="False"
                           Color="{DynamicResource PrimaryColor}"
                           HeightRequest="40"
                           HorizontalOptions="Center" />

        <!-- Haber Listesi (RefreshView içinde) -->
        <RefreshView IsRefreshing="{Binding IsRefreshing}" 
                     Command="{Binding RefreshCommand}">

            <CollectionView x:Name="haberlerCollectionView"
                            ItemsSource="{Binding Haberler}"
                            SelectionMode="Single"
                            SelectionChanged="HaberlerCollectionView_SelectionChanged">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Frame Margin="5"
                               Padding="10"
                               CornerRadius="12"
                               HasShadow="True"
                               BackgroundColor="{DynamicResource CardBackgroundColor}">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                </Grid.RowDefinitions>

                                <Label Text="{Binding Title}"
                                       FontSize="18"
                                       FontAttributes="Bold"
                                       TextColor="{DynamicResource PrimaryTextColor}" />

                                <Label Grid.Row="1"
                                       Text="{Binding Description}"
                                       FontSize="14"
                                       TextColor="{DynamicResource SecondaryTextColor}" />
                            </Grid>
                            <Frame.GestureRecognizers>
                                <TapGestureRecognizer Tapped="HaberItem_Tapped" />
                            </Frame.GestureRecognizers>
                        </Frame>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>

        </RefreshView>
    </StackLayout>
</ContentPage>
